<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hse.edu.cs.voronoidiagram.VoronoiDiagramController">
   <children>
      <Pane prefHeight="800.0" prefWidth="1000.0" HBox.hgrow="ALWAYS">
         <children>
            <Canvas fx:id="canvas" height="800.0" onMouseClicked="#onClickCanvas" width="1000.0" />
         </children>
      </Pane>
      <FlowPane onMouseClicked="#onClickCanvas" prefHeight="800.0" prefWidth="200.0" style="-fx-background-color: #8a7f8e;" HBox.hgrow="ALWAYS">
         <children>
            <TextField fx:id="numberToGeneratePoints" onKeyPressed="#formatTextFieldToNumbersOnly" prefHeight="60.0" prefWidth="90.0">
               <font>
                  <Font size="20.0" />
               </font>
               <FlowPane.margin>
                  <Insets right="10.0" top="15.0" />
               </FlowPane.margin>
            </TextField>
            <Button fx:id="generateButton" mnemonicParsing="false" onAction="#onGenerateButtonClick" prefHeight="60.0" prefWidth="90.0" text="Generate random points" wrapText="true">
               <FlowPane.margin>
                  <Insets top="15.0" />
               </FlowPane.margin>
            </Button>
            <Button fx:id="animationButton" mnemonicParsing="false" onAction="#onPlayAnimationButton" prefHeight="30.0" prefWidth="120.0" text="Play animation">
               <FlowPane.margin>
                  <Insets left="40.0" right="40.0" top="20.0" />
               </FlowPane.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#onClearCanvasButton" prefHeight="30.0" prefWidth="120.0" text="Clear canvas">
               <FlowPane.margin>
                  <Insets left="40.0" right="40.0" top="20.0" />
               </FlowPane.margin>
            </Button>
            <TextArea fx:id="textArea" prefHeight="500.0" prefWidth="200.0">
               <FlowPane.margin>
                  <Insets top="20.0" />
               </FlowPane.margin>
            </TextArea>
            <Button mnemonicParsing="false" onAction="#onDrawDiagramButton" prefHeight="30.0" prefWidth="120.0" text="Draw diagram">
               <FlowPane.margin>
                  <Insets left="40.0" right="40.0" top="20.0" />
               </FlowPane.margin>
            </Button>
            <Button fx:id="getDiagram" mnemonicParsing="false" onAction="#showDiagramInTextArea" prefHeight="30.0" prefWidth="100.0" text="Get diagram">
               <FlowPane.margin>
                  <Insets left="10.0" top="10.0" />
               </FlowPane.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#onHelpButton" prefHeight="30.0" prefWidth="60.0" text="Help">
               <FlowPane.margin>
                  <Insets left="20.0" right="10.0" top="10.0" />
               </FlowPane.margin>
            </Button>
         </children>
         <HBox.margin>
            <Insets />
         </HBox.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </FlowPane>
   </children>
</HBox>
